rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 【Quests】ログインしているユーザーは、全員がクエストを読み取れる
    match /quests/{questId} {
      allow read: if request.auth != null;
      // クエストの作成や編集は、アプリからは許可しない（管理画面などから行う想定）
      allow write: if false;
    }

    // 【Users】ユーザー情報のルール
    match /users/{userId} {
      // 読み取りはログインユーザー全員に許可
      allow read: if request.auth != null;
      // 書き込みは自分自身のみに許可
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 【MyQuests】ユーザーは自分のマイクエストのみ読み書きできる
    match /my_quests/{myQuestId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    // 【Posts】投稿に関するルール
    match /posts/{postId} {
      // ログインユーザーは全ての投稿を読める
      allow read: if request.auth != null;
      // 自分の投稿を作成できる
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      // 自分の投稿だけを更新・削除できる
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;

      // 【Likes】投稿への「いいね」に関するサブルール
      match /likes/{userId} {
        allow read: if request.auth != null;
        // 自分自身のIDでのみ「いいね」の作成・削除ができる
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }

      // 【Comments】投稿へのコメントに関するサブルール
      match /comments/{commentId} {
        allow read: if request.auth != null;
        // 自分のコメントを作成できる
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
        // 自分のコメントだけを更新・削除できる
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      }
    }
    
    // 【Friendships】フレンド関係に関するルール
    match /friendships/{friendshipId} {
      // 読み取り：自分に関係のあるフレンド情報のみ許可
      allow read: if request.auth != null && request.auth.uid in resource.data.userIds;
      // 作成 (友達申請)：
      // - ログインしている
      // - 申請者が自分自身である
      // - ステータスが "pending" である
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.requesterId
                    && request.resource.data.status == "pending";
      // 更新 (申請の承認・拒否)：
      // - ログインしている
      // - 自分が申請の受信者である
      // - 既存のステータスが "pending" である
      // - 新しいステータスが "accepted" または "declined" である
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.recipientId
                    && resource.data.status == "pending"
                    && (request.resource.data.status == "accepted" || request.resource.data.status == "declined");
      // 削除 (友達解除 または 申請取り消し):
      // - ログインしている
      // - 自分が関係者である
      allow delete: if request.auth != null && request.auth.uid in resource.data.userIds;
    }
  }
}